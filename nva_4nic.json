{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "apiVersion": {
            "defaultValue": "2015-06-15",
            "type": "string"
        },
        "vnetName": {
            "defaultValue": "myVnet",
            "type": "string"
        },
        "storageAccountName": {
            "defaultValue": "asatestjoselito",
            "type": "string"
        },
        "vmType": {
            "defaultValue": "asa",
            "type": "string",
            "allowedValues": ["asa","csr"]
        },
        "vmCount": {
            "defaultValue": 1,
            "type": "int"
        },
        "vmName": {
            "defaultValue": "asav-01",
            "type": "string"
        },
        "vmUsr": {
            "defaultValue": "myadmin",
            "type": "string"
        },
        "vmPwd": {
            "defaultValue": null,
            "type": "securestring"
        },
        "pipName": {
            "defaultValue": "asav-publicIP",
            "type": "string"
        },
        "subnet0Name": {
            "defaultValue": "subnet0",
            "type": "string"
        },
        "subnet1Name": {
            "defaultValue": "subnet1",
            "type": "string"
        },
        "subnet2Name": {
            "defaultValue": "subnet2",
            "type": "string"
        },
        "subnet3Name": {
            "defaultValue": "subnet3",
            "type": "string"
        },
        "vnetPrefix": {
            "defaultValue": "10.0.0.0/16",
            "type": "string"
        },
        "subnet0Prefix": {
            "defaultValue": "10.0.0.0/24",
            "type": "string"
        },
        "subnet1Prefix": {
            "defaultValue": "10.0.1.0/24",
            "type": "string"
        },
        "subnet2Prefix": {
            "defaultValue": "10.0.2.0/24",
            "type": "string"
        },
        "subnet3Prefix": {
            "defaultValue": "10.0.3.0/24",
            "type": "string"
        },
        "ip0": {
            "defaultValue": "10.0.0.101",
            "type": "string"
        },
        "ip1": {
            "defaultValue": "10.0.1.101",
            "type": "string"
        },
        "ip2": {
            "defaultValue": "10.0.2.101",
            "type": "string"
        },
        "ip3": {
            "defaultValue": "10.0.3.101",
            "type": "string"
        }
    },
    "variables": {
        "nicName": {
            "nic0": "[concat(parameters('vmName'), '-nic0')]",
            "nic1": "[concat(parameters('vmName'), '-nic1')]",
            "nic2": "[concat(parameters('vmName'), '-nic2')]",
            "nic3": "[concat(parameters('vmName'), '-nic3')]"
        },
        "udrName": {
            "nic1": "[concat(parameters('vmName'), '-udr1')]",
            "nic2": "[concat(parameters('vmName'), '-udr2')]",
            "nic3": "[concat(parameters('vmName'), '-udr3')]"
        },
        "settingsTable": {
            "asa": {
                "planName": "asav-azure-byol",
                "product": "cisco-asav",
                "publisher": "cisco",
                "sku": "asav-azure-byol",
                "vmSize": "Standard_D3_v2"
            },
            "csr": {
                "planName": "csr-azure-byol",
                "product": "cisco-csr-100v",
                "publisher": "cisco",
                "sku": "csr-azure-byol",
                "vmSize": "Standard_D3_v2"
            }
        },
        "settings": "[variables('settingsTable')[parameters('vmType')]]"
    },
    "resources": [
        {
            "comments": "Deploy Virtual Network Appliance",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmName')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "plan": {
                "name": "[variables('settings')['planName']]",
                "product": "[variables('settings')['product']]",
                "publisher": "[variables('settings')['publisher']]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('settings')['vmSize']]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('settings')['publisher']]",
                        "offer": "[variables('settings')['product']]",
                        "sku": "[variables('settings')['sku']]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[concat(parameters('vmName'),'-disk')]",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat('http', '://', parameters('storageAccountName'), '.blob.core.windows.net', concat('/vhds/', parameters('vmName'),'-disk.vhd'))]"
                        },
                        "caching": "ReadWrite"
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('vmUsr')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": false
                    },
                    "secrets": [],
                    "adminPassword": "[parameters('vmPwd')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName')['nic0'])]",
                            "properties": {
                                "primary": true
                            }
                        },
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName')['nic1'])]",
                            "properties": {
                                "primary": false
                            }
                        },
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName')['nic2'])]",
                            "properties": {
                                "primary": false
                            }
                        },
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName')['nic3'])]",
                            "properties": {
                                "primary": false
                            }
                        }
                    ]
                }
            },
            "resources": [],
            "dependsOn": [
                "[variables('nicName')['nic0']]",
                "[variables('nicName')['nic1']]",
                "[variables('nicName')['nic2']]",
                "[variables('nicName')['nic3']]"
            ]
        },
		{
			"name": "[variables('nicName')['nic0']]",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/erjosito/AzureTemplates/master/nic_noNSG_noSLB_PIP_static.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters":  {
                    "nicName": {"value": "[variables('nicName')['nic0']]"},
                    "ipAddress": { "value": "[parameters('ip0')]" },                    
                    "vnetName": { "value": "[parameters('vnetName')]" },
                    "subnetName": { "value": "[parameters('subnet0Name')]"},
                    "pipName": { "value": "[parameters('pipName')]" }
                }
            },
            "dependsOn": [
                "[parameters('vnetName')]"  
            ]
        },
		{
			"name": "[variables('nicName')['nic1']]",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/erjosito/AzureTemplates/master/nic_noNSG_noSLB_noPIP_static.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters":  {
                    "nicName": {"value": "[variables('nicName')['nic1']]"},
                    "ipAddress": { "value": "[parameters('ip1')]" },                    
                    "vnetName": { "value": "[parameters('vnetName')]" },
                    "subnetName": { "value": "[parameters('subnet1Name')]"}
                }
            },
            "dependsOn": [
                "[parameters('vnetName')]"
            ]
        },
		{
			"name": "[variables('nicName')['nic2']]",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/erjosito/AzureTemplates/master/nic_noNSG_noSLB_noPIP_static.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters":  {
                    "nicName": {"value": "[variables('nicName')['nic2']]"},
                    "ipAddress": { "value": "[parameters('ip2')]" },                    
                    "vnetName": { "value": "[parameters('vnetName')]" },
                    "subnetName": { "value": "[parameters('subnet2Name')]"}
                }
            },
            "dependsOn": [
                "[parameters('vnetName')]"
            ]
        },
		{
			"name": "[variables('nicName')['nic3']]",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/erjosito/AzureTemplates/master/nic_noNSG_noSLB_noPIP_static.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters":  {
                    "nicName": {"value": "[variables('nicName')['nic3']]"},
                    "ipAddress": { "value": "[parameters('ip3')]" },                    
                    "vnetName": { "value": "[parameters('vnetName')]" },
                    "subnetName": { "value": "[parameters('subnet3Name')]"}
                }
            },
            "dependsOn": [
                "[parameters('vnetName')]"
            ]
        },
        {
            "comments": "Routing for subnet 1",
            "type": "Microsoft.Network/routeTables",
            "name": "[variables('udrName')['nic1']]",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "routes": [
                    {
                        "name": "subnet0",
                        "properties": {
                            "addressPrefix": "[parameters('subnet0Prefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('ip1')]"
                        }
                    },
                    {
                        "name": "subnet2",
                        "properties": {
                            "addressPrefix": "[parameters('subnet2Prefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('ip1')]"
                        }
                    },
                    {
                        "name": "subnet3",
                        "properties": {
                            "addressPrefix": "[parameters('subnet3Prefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('ip1')]"
                        }
                    },
                    {
                        "name": "Default-Route-To-ASAv",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('ip1')]"
                        }
                    }
                ]
            },
            "resources": [],
            "dependsOn": []
        },
        {
            "comments": "Routing for subnet 2",
            "type": "Microsoft.Network/routeTables",
            "name": "[variables('udrName')['nic2']]",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "routes": [
                    {
                        "name": "subnet0",
                        "properties": {
                            "addressPrefix": "[parameters('subnet0Prefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('ip2')]"
                        }
                    },
                    {
                        "name": "subnet1",
                        "properties": {
                            "addressPrefix": "[parameters('subnet1Prefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('ip2')]"
                        }
                    },
                    {
                        "name": "subnet3",
                        "properties": {
                            "addressPrefix": "[parameters('subnet3Prefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('ip2')]"
                        }
                    },
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('ip2')]"
                        }
                    }
                ]
            },
            "resources": [],
            "dependsOn": []
        },
        {
            "comments": "Routing table for subnet 3",
            "type": "Microsoft.Network/routeTables",
            "name": "[variables('udrName')['nic3']]",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "routes": [
                    {
                        "name": "subnet0",
                        "properties": {
                            "addressPrefix": "[parameters('subnet0Prefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('ip3')]"
                        }
                    },
                    {
                        "name": "subnet1",
                        "properties": {
                            "addressPrefix": "[parameters('subnet1Prefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('ip3')]"
                        }
                    },
                    {
                        "name": "subnet2",
                        "properties": {
                            "addressPrefix": "[parameters('subnet2Prefix')]",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('ip3')]"
                        }
                    },
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('ip3')]"
                        }
                    }
                ]
            },
            "resources": [],
            "dependsOn": []
        },
        {
            "comments": "Vnet creation, including UDR (needs to wait for the UDRs)",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('vnetName')]",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "subnet0",
                        "properties": {
                            "addressPrefix": "[parameters('subnet0Prefix')]"
                        }
                    },
                    {
                        "name": "subnet1",
                        "properties": {
                            "addressPrefix": "[parameters('subnet1Prefix')]",
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', variables('UDRName')['nic1'])]"
                            }
                        }
                    },
                    {
                        "name": "subnet2",
                        "properties": {
                            "addressPrefix": "[parameters('subnet2Prefix')]",
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', variables('UDRName')['nic2'])]"
                            }
                        }
                    },
                    {
                        "name": "subnet3",
                        "properties": {
                            "addressPrefix": "[parameters('subnet3Prefix')]",
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', variables('UDRName')['nic3'])]"
                            }
                        }
                    }
                ]
            },
            "resources": [],
            "dependsOn": [
                "[variables('udrName')['nic1']]",
                "[variables('udrName')['nic2']]",
                "[variables('udrName')['nic3']]"
            ]
        }
    ]
}