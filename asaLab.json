{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "defaultValue": "myVnet",
            "type": "string",
            "metadata": { "description": "Name of the vNet that will be created containing the subnets and other objects" }
        },
        "storageAccountName": {
            "defaultValue": "[concat('storage',uniqueString(resourceGroup().id))]",
            "type": "string",
            "metadata": { "description": "Name of the storage account used for the VMs. If not specified, a unique ID will be taken" }
        },
        "subnet1Name": {
            "defaultValue": "frontendSubnet",
            "type": "string",
            "metadata": { "description": "Name for the first subnet" }
		},
        "adminUsername": {
            "defaultValue": "jose",
            "type": "string",
            "metadata": { "description": "Name for the second subnet" }
		},
        "asaName": {
            "defaultValue": "asav-01",
            "type": "string"
        },
        "defaultPwd": {
            "defaultValue": null,
            "type": "securestring"
        },
        "pipName": {
            "defaultValue": "asav-publicIP",
            "type": "string"
        },
        "subnet0Name": {
            "defaultValue": "subnet0",
            "type": "string"
        },
        "subnet1Name": {
            "defaultValue": "subnet1",
            "type": "string"
        },
        "subnet2Name": {
            "defaultValue": "subnet2",
            "type": "string"
        },
        "subnet3Name": {
            "defaultValue": "subnet3",
            "type": "string"
        },
        "vnetPrefix": {
            "defaultValue": "10.0.0.0/16",
            "type": "string"
        },
        "subnet0Prefix": {
            "defaultValue": "10.0.0.0/24",
            "type": "string"
        },
        "subnet1Prefix": {
            "defaultValue": "10.0.1.0/24",
            "type": "string"
        },
        "subnet2Prefix": {
            "defaultValue": "10.0.2.0/24",
            "type": "string"
        },
        "subnet3Prefix": {
            "defaultValue": "10.0.3.0/24",
            "type": "string"
        },
        "ip0": {
            "defaultValue": "10.0.0.101",
            "type": "string"
        },
        "ip1": {
            "defaultValue": "10.0.1.101",
            "type": "string"
        },
        "ip2": {
            "defaultValue": "10.0.2.101",
            "type": "string"
        },
        "ip3": {
            "defaultValue": "10.0.3.101",
            "type": "string"
        }
    },
 
    "variables": {
		"vnetSpace": "10.0.0.0/16",
		"subnet1Space": "10.0.1.0/24",
		"apiVersion": "2016-03-30"
	},

    "resources": [
        {
			"comments": "Storage account for VM disks",
			"type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "Storage",
            "name": "[parameters('storageAccountName')]",
            "apiVersion": "2016-01-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {},
            "resources": [],
            "dependsOn": []
        },
		{
			"comments": "ASA, including vnet, subnets and UDR!",
			"name": "asa",
            "type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/erjosito/AzureTemplates/master/asav.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters":  {
                    "vnetName": { "value": "[parameters('vnetName')]" },
                    "storageAccountName": { "value": "[parameters('storageAccountName')]" },
                    "subnet0Name": { "value": "[parameters('subnet0Name')]"},
                    "subnet1Name": { "value": "[parameters('subnet1Name')]"},
                    "subnet2Name": { "value": "[parameters('subnet2Name')]"},
                    "subnet3Name": { "value": "[parameters('subnet3Name')]"},
                    "vnetPrefix": { "value": "[parameters('vnetPrefix')]"},
                    "subnet0Prefix": { "value": "[parameters('subnet0Prefix')]"},
                    "subnet1Prefix": { "value": "[parameters('subnet1Prefix')]"},
                    "subnet2Prefix": { "value": "[parameters('subnet2Prefix')]"},
                    "subnet3Prefix": { "value": "[parameters('subnet3Prefix')]"},
                    "ip0": { "value": "[parameters('ip0')]"},
                    "ip1": { "value": "[parameters('ip1')]"},
                    "ip2": { "value": "[parameters('ip2')]"},
                    "ip3": { "value": "[parameters('ip3')]"},
                    "pipName": { "value": "[parameters('pipName')]"},
                    "asaUsr": { "value": "[parameters('adminUsername')]" },
                    "asaPwd": { "value": "[parameters('defaultPwd')]" },
                    "asaName": { "value": "asav-01" }
                }
            },
            "dependsOn": [
                "[parameters('storageAccountName')]"
            ]
        },
		{
			"name": "subnet1VMs",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/erjosito/AzureTemplates/master/subnet.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters":  {
                    "vnetName": { "value": "[concat(parameters('subnet1Name'), '-', parameters('vnetName'))]" },
                    "storageAccountName": { "value": "[parameters('storageAccountName')]" },
                    "subnetName": { "value": "[parameters('subnet1Name')]"},
                    "deployLBYesNo": { "value": "no" },
                    "vmCount": { "value": 2 },
                    "adminUsername": { "value": "[parameters('adminUsername')]" },
                    "adminPassword": { "value": "[parameters('defaultPwd')]" },
                    "availabilitySetName": { "value": "[concat(parameters('subnet1Name'), '-AvSet')]" }
                }
            },
            "dependsOn": [
                "[parameters('storageAccountName')]",
                "asa"
            ]
        },
		{
			"name": "subnet2VMs",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2016-06-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"uri": "https://raw.githubusercontent.com/erjosito/AzureTemplates/master/subnet.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters":  {
                    "vnetName": { "value": "[concat(parameters('subnet2Name'), '-', parameters('vnetName'))]" },
                    "storageAccountName": { "value": "[parameters('storageAccountName')]" },
                    "subnetName": { "value": "[parameters('subnet2Name')]"},
                    "deployLBYesNo": { "value": "no" },
                    "vmCount": { "value": 2 },
                    "adminUsername": { "value": "[parameters('adminUsername')]" },
                    "adminPassword": { "value": "[parameters('defaultPwd')]" },
                    "availabilitySetName": { "value": "[concat(parameters('subnet2Name'), '-AvSet')]" }
                }
            },
            "dependsOn": [
                "[parameters('storageAccountName')]",
                "asa"
            ]
        }
    ]
}