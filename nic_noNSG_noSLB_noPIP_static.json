{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "nicName": {
            "defaultValue": "myNic",
            "type": "string"
        },
        "vnetName": {
            "defaultValue": "myVnet",
            "type": "string"
        },
        "subnetName": {
            "defaultValue": "serverSubnet",
            "type": "string"
        },
        "ipAddress": {
            "defaultValue": "10.0.0.1",
            "type": "string"
        },
    },
    "variables": {
        "ipConfigName": "[concat(parameters('nicName'),'-ipConfig')]",
		"apiVersion": "2016-03-30",        
    },
    "resources": [
       {
			"comments": "NIC created with static IP addresses",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[parameters('nicName')]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[variables('ipConfigName')]",
                        "properties": {
                            "privateIPAddress": "[parameters('ipAddress')]",
                            "privateIPAllocationMethod": "Static",
                            "subnet": {
                                "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('subnetName'))]"
                            }
                        }
                    }
                ],
                "dnsSettings": {
                    "dnsServers": []
                },
                "enableIPForwarding": true,
            },
            "resources": [],
            "dependsOn": [],
        }
    ]
}