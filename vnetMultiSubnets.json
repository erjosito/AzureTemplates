{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vnetName": {
            "defaultValue": "myVnet",
            "type": "string"
        },
        "vnetOctets12": {
            "defaultValue": "10.0.",
            "type": "string"
        },
        "subnetNamePrefix": {
            "defaultValue": "subnet",
            "type": "string"
        },
        "subnetCount": {
            "defaultValue": 2,
            "type": "int",
            "metadata": { "description": "Number of subnets IN ADDITION to the gateway subnet"}
        },
        "gwName": {
            "defaultValue": "myGw",
            "type": "string",
            "metadata": { "description": "Name for the VPN gateway"}
        },
        "enableBgp": {
            "type": "string",
            "metadata": { "description": "Enable or disable BGP" },
            "defaultValue": "false",
            "allowedValues": ["true", "false"]    
        },
        "gwPIPName": {
            "defaultValue": "myGwPIP",
            "type": "string",
            "metadata": { "description": "Public IP address for the VPN gateway"}
        }
    },
    "variables": {
        "apiVersion": "2016-03-30",
        "vnetSpace": "[concat(parameters('vnetOctets12'), '0.0/16')]"
    },
    "resources": [
        {
            "comments": "Create Vnet without subnets",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('vnetName')]",
            "apiVersion": "[variables('apiVersion')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnetSpace')]"
                    ]
                }
            },
            "resources": [],
            "dependsOn": []
        },
        {
            "comments": "Create the gateway subnet",
            "apiVersion": "[variables('apiVersion')]",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(parameters('vnetName'), '/', 'GatewaySubnet')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressPrefix": "[concat(parameters('vnetOctets12'), '0.0/24')]"
            },
            "dependsOn": [
                "[parameters('vnetName')]"
            ]
        },
        {
            "comments": "Create public IP address for the VPN gateway",
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('gwPIPName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
        {
            "comments": "Create gateway",
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/virtualNetworkGateways",
            "name": "[parameters('gwName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                {
                    "properties": {
                    "privateIPAllocationMethod": "Dynamic",
                    "subnet": {
                        "id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName')), '/subnets/', parameters('vnetName'), '-gwSubnet')]"
                    },
                    "publicIPAddress": {
                        "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('gwPIPName'))]"
                    }
                    },
                    "name": "[concat(parameters('vnetName'), 'vnetGwConfig')]"
                }
                ],
                "gatewayType": "Vpn",
                "vpnType": "RouteBased",
                "enableBgp": false,
                "dependsOn": [
                    "[parameters('gwPIPName')]",
                    "[parameters('vnetName')]"
                ]
            }
        },
        {
            "comments": "Create the non-gateway subnets, where VMs will be deployed",
            "apiVersion": "[variables('apiVersion')]",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(parameters('vnetName'), '/', parameters('subnetNamePrefix'), copyIndex(1))]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressPrefix": "[concat(parameters('vnetOctets12'), copyIndex(1), '.0/24')]"
            },
            "copy": {
                "name": "[concat(parameters('vnetName'), '-subnetCopy')]",
                "count": "[parameters('subnetCount')]"
            },
            "dependsOn": [
                "[parameters('vnetName')]",
                "[concat(parameters('vnetName'), '/', parameters('vnetName'), '-gwSubnet')]"
            ]
        }
    ]
}